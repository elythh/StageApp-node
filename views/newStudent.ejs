<!doctype html>
<html>
    <head>
    <!-- ... -->
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="/views/style.css" rel="stylesheet">
    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
    <head>
        <%- include('partials/header'); %>
      </head>
    </head>
    <body class="font-Poppins bg-gray-50">
        <div class="container w-full mb-20">
            <div class="container max-w-full mx-auto py-24 px-6">
                <div class="font-sans">
                <div class="max-w-m mx-auto px-6">
                  <div class="relative flex flex-wrap">
                    <div class="w-full relative">
                      <div class="mt-6">
                        <div class="text-center font-semibold text-black">
                          Déposer sa candidature en tant qu'étudiant
                        </div>
                       
                        <form method="post" action="http://localhost:8080/etudiants/save" enctype="multipart/form-data" class="w-full max-w-lg mt-6 mx-auto ">
                            <div class="flex flex-wrap -mx-3">
                              <div class="w-full md:w-1/2 px-3 ">
                                <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" for="grid-first-name">
                                  Nom
                                </label>
                                <input id="nom" name="nom" class="appearance-none block w-full bg-gray-200 text-gray-700 border rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white" type="text">
                              </div>
                              <div class="w-full md:w-1/2 px-3">
                                <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2">
                                  Prénom
                                </label>
                                <input id="prenom" name="prenom" class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500" id="grid-last-name">
                              </div>
                            </div>
                            <div class="flex flex-wrap -mx-3 mb-3">
                                <div class="w-full px-3">
                                  <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" for="grid-mail">
                                    Mail
                                  </label>
                                  <input id="mail" name="mail"  class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-gray-500" id="grid-mail">
                                </div>
                            </div>
                            <div class="flex flex-wrap -mx-3 mb-3">
                                <div class="w-full px-3">
                                  <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" for="grid-password">
                                    Mot de passe
                                  </label>
                                  <input id="password" name="password"  class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-gray-500" id="grid-password">
                                </div>
                            </div>
                            <div class="flex flex-wrap -mx-3 mb-3">
                                <div class="w-full px-3">
                                  <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" for="grid-studentNumber">
                                    Numéro étudiant
                                  </label>
                                  <input id="noEtudiant" name="noEtudiant"  class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-gray-500" id="grid-studentNumber">
                                </div>
                            </div>
                            <div class="flex flex-wrap -mx-3 mb-3">
                              <div class="w-full px-3">
                                <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" for="grid-mail">
                                  Compétences
                                </label>
                                <input class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-gray-500" id="grid-mail">
                              </div>
                            </div>
                            <div class="flex flex-wrap -mx-3 mb-3">
                                <div class="w-full px-3">
                                  <label id="description" name="description"  class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" for="grid-password">
                                    Description
                                  </label>
                                  <input class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-gray-500" id="grid-password">
                                </div>
                              </div>
                              <div class="flex flex-wrap -mx-3 mb-3">
                                <div class="w-full px-3">
                                  <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" for="grid-studentNumber">
                                    LinkedIn
                                  </label>
                                  <input id="LinkedIn"  name="LinkedIn"  class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-gray-500" id="grid-studentNumber">
                                </div>
                            </div>
                            <div class="flex flex-wrap -mx-3 mb-6 mt-6">
                                <div class="w-full md:w-1/2 px-3 mb-6 md:mb-0 ">
                                    <input type="file" id="lm"  name="lm" />
                                </div>
                                <div class="w-full md:w-1/2 px-3">
                                    <input type="file" id="cv"  name="cv"/>
            
                                </div>
                            </div>
                            <button class="mt-3 text-lg font-semibold 
                              bg-gray-800 w-full text-white rounded-lg
                              px-6 py-3 block shadow-xl hover:text-white hover:bg-black">
                              Déposer sa candidature
                            </button>
                          </form>
                     
                      </div>
                    </div>
                  </div>
                </div>
              </div>
              </div>
        </div>
        <footer class="w-full bg-green-100 fixed bottom-0">
            <div class="container text-center">
              2020-2021
        </footer>
    </body>

</html>