<!doctype html>
<html>
    <head>
    <!-- ... -->
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="/views/style.css" type="text/css" rel="stylesheet">
    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
    <head>
        <%- include('partials/header'); %>
    </head>
    </head>
    <body class="font-Poppins bg-gray-50">
        <div class="container w-full mb-20">
            <div class="container flex flex-col list">
                    <% etudiants.forEach(function(etudiant) { %>
                        <div class="bg-white text-base w-5/6 md:w-1/2 lg:w-1/3 rounded-lg shadow m-auto border border-b-8 border-black mt-5 card">
                            <div class="p-4 flex flex-col"> <%= etudiant.nom %></div>
                            <h3 class="text-4xl"> <%= etudiant.prenom %> </h3>
                            <div class="text-gray-800"><%= etudiant.competences %></div>
                            <p class="my-4"><%= etudiant.description %></p>
                            <div class="container flex flex-row">
                                <div class="container flex flex-row justify-start">
                                    <a class="bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4  m-1  rounded-lg text-center"  href=<%= etudiant.linkedInLink %>>LinkedIn</a>
                                    <a class="bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4  m-1  rounded-lg text-center"  href=<%= etudiant.mail %>>email</a>
                                </div>
                                <div class="container flex flex-row justify-end">
                                    <a class="bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4  m-1  rounded-lg text-center"  href=<%= etudiant.cv %>>CV</a>
                                    <a class="bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4  m-1  rounded-lg text-center"  href=<%= etudiant.lm %>>Lettre</a>
                                </div>
                            </div>
                        </div>
                     <% }); %>
            </div>
        </div>
        <footer class="w-full bg-green-100 bottom-0">
            <div class="container text-center">
              2020-2021
        </footer>
    </body>

</html>